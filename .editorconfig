root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.min.{css,js}]
insert_final_newline = false

[*.{php,tpl,twig}]
indent_style = tab
indent_size = 4

[*.{yml,toml}]
indent_style = space
indent_size = 2

# for pretty gulp-file-include
[*/parts/*.html]
insert_final_newline = false
